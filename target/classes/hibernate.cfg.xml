<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- local connection properties -->
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/forum?useSSL=false&amp;useUnicode=true&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.username">sam</property>
        <property name="hibernate.connection.password">123456Sam</property>
        <property name="hibernate.connection.pool_size">10</property>

        <!-- dialect for MySQL -->
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>

        <property name="hibernate.show_sql">true</property>

        <mapping class="com.olprog.forum.entities.CategorieEntity"/>
        <mapping class="com.olprog.forum.entities.MessageEntity"/>
        <mapping class="com.olprog.forum.entities.SujetEntity"/>
        <mapping class="com.olprog.forum.entities.UtilisateurEntity"/>


    </session-factory>
</hibernate-configuration>